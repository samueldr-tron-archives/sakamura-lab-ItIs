$flag = 0;

print "/* This file is generated by genoffset. */\n";
print "\n";

while ($line = <>) {
	chop $line;

	if ($line =~ /! BEGIN/) {
		$flag = 1;
	}
	elsif ($line =~ /! END/) {
		$flag = 0;
	}
	elsif ($flag) {
		$line =~ s/^([^ \t]+) = #([^ \t]+)/#define $1\t$2/;
		print $line,"\n";
	}
}
